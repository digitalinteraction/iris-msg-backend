{
  "name": "iris-api",
  "version": "0.1.0",
  "description": "Project setup by robb-j/ts-node-base",
  "main": "index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "build:docs": "ocedocs",
    "coverage": "jest --coverage",
    "dev": "ts-node -r tsconfig-paths/register -r dotenv/config src",
    "dev:watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'npm run dev'",
    "lint": "npx tslint -p .",
    "make:image": "node tools/buildAndPush.js",
    "preversion": "npm run lint -s && npm test -s",
    "mongo:once": "docker run -it --rm -p 27017:27017 mongo",
    "start": "node -r tsconfig-paths/register -r dotenv/config dist",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch"
  },
  "author": "robb-j",
  "license": "ISC",
  "dependencies": {
    "api-formatter": "^0.3.1",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "firebase-admin": "^5.12.1",
    "iso-3166-2": "^1.0.0",
    "jsonwebtoken": "^8.2.2",
    "mongoose": "^5.0.15",
    "phone": "^2.0.0",
    "twilio": "^3.17.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/fs-extra": "^5.0.3",
    "@types/iso-3166-2": "^0.6.0",
    "@types/jest": "^23.0.0",
    "@types/js-yaml": "^3.11.1",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongodb": "^3.0.19",
    "@types/mongoose": "^5.0.15",
    "@types/phone": "^1.0.3",
    "@types/superagent": "^3.8.0",
    "@types/supertest": "^2.0.4",
    "@types/twilio": "0.0.9",
    "jest": "^23.1.0",
    "jest-environment-node": "^23.1.0",
    "js-yaml": "^3.12.0",
    "nodemon": "^1.17.5",
    "ocelot-docs": "^0.3.2",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.0",
    "tsconfig-paths": "^3.4.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "verbose": false,
    "testEnvironment": "./tools/MongooseEnvironment.js",
    "globalSetup": "./tools/globalTestSetup.js",
    "globalTeardown": "./tools/globalTestTeardown.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "optionalDependencies": {
    "mongodb-memory-server": "^1.8.0"
  }
}
