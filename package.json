{
  "name": "iris-api",
  "version": "0.9.3",
  "description": "The backend server for api.irismsg.io",
  "scripts": {
    "build": "tsc -p .",
    "build:docs": "ocedocs",
    "build:readme": "md-toc -i",
    "dev:once": "ts-node -r tsconfig-paths/register -r dotenv/config src",
    "dev": "nodemon -q --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'npm run dev:once -s'",
    "lint": "npx tslint -p .",
    "make:image": "node tools/buildAndPush.js",
    "preversion": "./tools/preversion",
    "mongo": "docker run -it --rm --name iris_mongo -v iris_dev:/data/db -p 27017:27017 mongo",
    "start": "node -r tsconfig-paths/register -r dotenv/config src",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch"
  },
  "author": "robb-j",
  "license": "ISC",
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "api-formatter": "^1.0.1",
    "axios": "^0.18.0",
    "body-parser": "^1.19.0",
    "commander": "^2.20.0",
    "cors": "^2.8.5",
    "cron-parser": "^2.13.0",
    "dot-prop": "^5.1.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "firebase-admin": "^5.13.1",
    "iso-3166-2": "^1.0.0",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.6",
    "phone": "^2.3.17",
    "prompts": "^0.1.14",
    "pug": "^2.0.4",
    "request": "^2.88.0",
    "tsconfig-paths": "^3.8.0",
    "twilio": "^3.33.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/accept-language-parser": "^1.5.1",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/dot-prop": "^5.0.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "0.0.42",
    "@types/iso-3166-2": "^0.6.0",
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.29",
    "@types/mongoose": "^5.5.9",
    "@types/node": "^12.6.8",
    "@types/phone": "^1.0.3",
    "@types/pug": "^2.0.4",
    "@types/superagent": "^4.1.3",
    "@types/supertest": "^2.0.8",
    "@types/twilio": "0.0.10",
    "jest": "^24.8.0",
    "jest-environment-node": "^24.8.0",
    "nodemon": "^1.19.1",
    "ocelot-docs": "^0.4.0",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "verbose": false,
    "testEnvironment": "./tools/MongooseEnvironment.js",
    "globalSetup": "./tools/globalTestSetup.js",
    "globalTeardown": "./tools/globalTestTeardown.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "optionalDependencies": {
    "mongodb-memory-server": "^1.8.0"
  }
}
