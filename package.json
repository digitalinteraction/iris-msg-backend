{
  "name": "iris-api",
  "version": "0.1.0",
  "description": "Project setup by robb-j/ts-node-base",
  "main": "index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "coverage": "jest --coverage",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node -r dotenv/config' src/index.ts",
    "lint": "npx tslint -p .",
    "make:image": "node tools/buildAndPush.js",
    "preversion": "npm run lint -s && npm test -s",
    "mongo:once": "docker run -it --rm -p 27017:27017 mongo",
    "start": "node -r dotenv/config dist",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch"
  },
  "author": "robb-j",
  "license": "ISC",
  "dependencies": {
    "api-formatter": "^0.3.1",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "fs-extra": "^6.0.1",
    "iso-3166-2": "^1.0.0",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.0.15",
    "phone": "^2.0.0-rc.1",
    "twilio": "^3.17.2"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/express-jwt": "0.0.40",
    "@types/fs-extra": "^5.0.1",
    "@types/iso-3166-2": "^0.6.0",
    "@types/jest": "^22.2.3",
    "@types/js-yaml": "^3.11.1",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mongodb": "^3.0.12",
    "@types/mongoose": "^5.0.15",
    "@types/phone": "^1.0.3",
    "@types/supertest": "^2.0.4",
    "@types/twilio": "0.0.9",
    "jest": "^22.4.3",
    "jest-environment-node": "^22.4.3",
    "js-yaml": "^3.11.0",
    "mongodb-memory-server": "^1.7.3",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "verbose": false,
    "testEnvironment": "./tools/MongooseEnvironment.js",
    "globalSetup": "./tools/globalTestSetup.js",
    "globalTeardown": "./tools/globalTestTeardown.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
