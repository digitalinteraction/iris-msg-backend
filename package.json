{
  "name": "iris-api",
  "private": "true",
  "version": "0.10.0",
  "description": "The backend server for api.irismsg.io",
  "author": "robb-j",
  "license": "MIT",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "build:docs": "ocedocs",
    "build:readme": "md-toc -i",
    "dev:once": "ts-node -r tsconfig-paths/register -r dotenv/config src",
    "dev": "nodemon -q --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'npm run dev:once -s'",
    "preversion": "./tools/preversion",
    "start": "node -r tsconfig-paths/register -r dotenv/config src",
    "lint": "tsc --noEmit",
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "api-formatter": "^1.0.1",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "commander": "^2.20.0",
    "cors": "^2.8.5",
    "cron-parser": "^2.13.0",
    "dot-prop": "^5.1.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "firebase-admin": "^5.13.1",
    "iso-3166-2": "^1.0.0",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.6",
    "phone": "^2.3.17",
    "prompts": "^0.1.14",
    "pug": "^2.0.4",
    "request": "^2.88.0",
    "tsconfig-paths": "^3.8.0",
    "twilio": "^3.33.1",
    "uuid": "^3.3.2",
    "valid-env": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/accept-language-parser": "^1.5.1",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/dot-prop": "^5.0.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "0.0.42",
    "@types/iso-3166-2": "^0.6.0",
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.29",
    "@types/mongoose": "^5.5.9",
    "@types/node": "^12.6.8",
    "@types/phone": "^1.0.3",
    "@types/pug": "^2.0.4",
    "@types/superagent": "^4.1.3",
    "@types/supertest": "^2.0.8",
    "@types/twilio": "0.0.10",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "jest-environment-node": "^24.8.0",
    "lint-staged": "^9.2.0",
    "mongodb-memory-server-core": "^5.1.8",
    "nodemon": "^1.19.1",
    "ocelot-docs": "^0.4.0",
    "prettier": "^1.18.2",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "./tools/MongooseEnvironment.js",
    "globalSetup": "./tools/globalTestSetup.js",
    "globalTeardown": "./tools/globalTestTeardown.js",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
